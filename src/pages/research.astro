---
import Layout from "@/layouts/Layout.astro";
import { profile } from "@/settings";
import { loadYaml } from "@/lib/loadYaml";
import BetterIcon from "@/components/ui/BetterIcon.astro";
import {RESEARCH_ICONS} from "@/data/researchIcons";
import type { Publication } from "@/types/publication";

interface ResearchData {
  introduction: string[];
  projects: { title: string; description: string; publications?: string[] }[];
  keywords: string[];
  collaboration: string;
}

const { research_areas } = profile;
const research = loadYaml<ResearchData>('research.yaml');
const publications = loadYaml<Publication[]>('publications.yaml');

// Create a map of publication id to publication for quick lookup
const publicationMap = new Map<string, Publication>();
publications.forEach((pub) => {
  publicationMap.set(pub.id, pub);
});
---

<Layout title="Research">
  <div class="prose max-w-none">
    <h1 class="text-3xl font-bold mb-8">Research</h1>

    <div class="mb-12">
      {research.introduction.map((paragraph) => (
        <p class="text-lg mb-6">{paragraph}</p>
      ))}
    </div>

    <h2 class="text-2xl font-bold mb-6">Research Areas</h2>
    <div class="grid gap-4 mb-12">
      {
        research_areas.map((area) => (
          <div class="flex gap-6 items-center">
            <BetterIcon>
              <svg
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 24 24"
                fill="none"
                stroke-width="2"
                class="size-6 stroke-accent"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d={RESEARCH_ICONS[area.field as keyof typeof RESEARCH_ICONS]?.path || RESEARCH_ICONS['computer-science'].path}
                />
              </svg>
            </BetterIcon>
            <div>
              <h3 class="text-xl font-semibold mb-2">{area.title}</h3>
              <p class="text-base">{area.description}</p>
            </div>
          </div>
        ))
      }
    </div>

    <h2 class="text-2xl font-bold mb-6">Projects</h2>
    <div class="grid gap-6 mb-12">
      {
        research.projects.map((project) => (
          <div class="p-6 bg-base-200 rounded-xl text-base-content">
            <h3 class="text-xl font-semibold mb-3">{project.title}</h3>
            <p class="mb-4">{project.description}</p>
            {project.publications && project.publications.length > 0 && (
              <div class="flex flex-wrap gap-2 mt-4">
                {project.publications.map((pubId) => {
                  const pub = publicationMap.get(pubId);
                  if (!pub) return null;
                  const link = pub.links?.arxiv || pub.links?.pdf;
                  return link ? (
                    <a href={link} target="_blank" rel="noopener noreferrer" class="badge badge-sm badge-outline hover:badge-primary transition-colors">
                      {pub.venue}
                    </a>
                  ) : (
                    <span class="badge badge-sm badge-outline">{pub.venue}</span>
                  );
                })}
              </div>
            )}
          </div>
        ))
      }
    </div>

    <h2 class="text-2xl font-bold mb-6 mt-12">Research Keywords</h2>
    <div class="flex flex-wrap gap-2 mb-8">
      {research.keywords.map((keyword) => (
        <span class="badge badge-lg badge-outline">{keyword}</span>
      ))}
    </div>

    <h2 class="text-2xl font-bold mb-6">Collaboration</h2>
    <p class="text-lg mb-6">{research.collaboration}</p>
  </div>
</Layout>
